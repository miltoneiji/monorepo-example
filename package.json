{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.8.5",
    "lint-staged": "^8.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md}": ["prettier --write", "git add"]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean:build": "lerna run clean:build",
    "clean": "lerna clean",
    "test": "lerna run test --stream",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "prettier": "lerna run prettier",
    "verify": "yarn clean -y && yarn clean:build && yarn bootstrap && yarn build && yarn lint && yarn prettier && yarn test",
    "webapp:start": "lerna run --scope @monorepo/webapp start --stream",
    "components:storybook": "lerna run --scope @monorepo/components storybook"
  }
}
